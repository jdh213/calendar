<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weeks_container"
    android:layout_width="50dp"
    android:layout_height="50dp">

    <com.devroid.calendarlib.verticalCalendar.ActivityRingProgressBar
        android:id="@+id/dayGraph"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        app:circleThickness="0.6"
        app:hasEmptyProgressBar="true"
        app:hasOneProgressView="false"
        app:hasTwoProgressView="true"
        app:isAnimationOn="false"
        app:useRoundedCorner="true" />

    <TextView
        android:id="@+id/dayText"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12dp" />

</FrameLayout>